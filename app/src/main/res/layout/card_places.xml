<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <!-- CardView para lugares -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_lugares"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="2dp"
        android:elevation="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        card_view:cardCornerRadius="5dp"
        card_view:cardBackgroundColor="?android:attr/colorBackground"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:text="Lugares"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:background="#426493"
                android:alpha="0.8"
                android:textColor="#fff"
                android:textSize="21sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/tv_placeName" />

            <TextView
                android:text="LocaciÃ³n:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:id="@+id/textView5"
                android:textStyle="normal|bold"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@+id/tv_placeName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_placeLocationLng"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/tv_placeLocationLat"
                android:layout_alignStart="@+id/tv_placeLocationLat"
                android:fontFamily="serif" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_placeLocationLat"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="serif"
                android:layout_below="@+id/textView5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/textView5"
                android:layout_toEndOf="@+id/textView5" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
